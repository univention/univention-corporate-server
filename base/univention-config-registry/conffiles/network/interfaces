auto lo
iface lo inet loopback

@!@
def check_gateway (ip, netmask, gateway):
	if not gateway:
		return 0
	samenet=1
	for k in range(0,4):
		if not (int(ip[k])&int(netmask[k])) == (int(gateway[k])&int(netmask[k])):
			samenet=0
	if samenet == 0:
		return 0
	if samenet == 1:
		return 1
		

