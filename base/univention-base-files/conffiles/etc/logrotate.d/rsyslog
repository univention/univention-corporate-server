/var/log/kern.log
/var/log/auth.log
/var/log/user.log
/var/log/lpr.log
/var/log/cron.log
/var/log/debug
/var/log/messages
{
@!@
import univention.lib.ucrLogrotate
settings = univention.lib.ucrLogrotate.getLogrotateConfig('syslog-other', configRegistry)
for setting in settings.values():
	print '\t%s' % (setting, )
@!@
	delaycompress
	sharedscripts
	postrotate
		invoke-rc.d rsyslog rotate > /dev/null
	endscript
}
