				output=common #FIXME
				;;
			it) #Italian
				output=it
				;;
			lo) #Lao
				output=common #FIXME
				;;
			la) #Latin American
				output=common #FIXME
				;;
			lv) #Latvian
				output=lv
				;;
			lt) #Lithuanian
				output=lt
				;;
