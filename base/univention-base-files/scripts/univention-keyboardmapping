				output=common #FIXME
				;;
			cz) #Czech
				output=common #FIXME
				;;
			cz_qwerty) #Czech (qwerty)
				output=common #FIXME
				;;
			dk) #Danish
				output=da
				;;
			dvorak) #Dvorak
				output=common #FIXME
				;;
			ee) #Estonian
				output=common #FIXME
				;;
			fi) #Finnish
				output=fi
				;;
			fr) #French
				output=fr
				;;
			fr-latin9) #French (fr-latin9)
				output=common #FIXME
				;;
			ge_la) #Georgian (ge_la)
				output=common #FIXME
				;;
			ge_ru) #Georgian (ge_ru)
				output=common #FIXME
				;;
			de) #Germany
				output=de
				;;
			gb) #Great Britain
				output=en-gb
				;;
			guj) #Gujarati
				output=common #FIXME
				;;
			guj) #Gujarati
				output=common #FIXME
				;;
			gur) #Gurmukhi
				output=common #FIXME
				;;
