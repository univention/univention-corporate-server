die () {
	echo "${0##/*}: $*" >&2
	exit 1
}
opt="$(getopt -o 'h' --longoptions 'exclude-apache,help' -- "$@")" ||
	die 'Terminating...'
eval set -- "$opt"
while [ $# -ge 1 ]
do
	case "$1" in
	-h|--help)
		echo "${0##*/} [--help] [--exclude-apache]"
		exit 0
		;;
	--exclude-apache)
		shift
		;;
	--)
		shift
		break
		;;
	*)
		die 'Internal error!'
		;;
	esac
done

for prog in univention-management-console-web-server univention-management-console-server
do
	bin="/usr/sbin/$prog"
	if [ -x "$bin" ]
	then
		dpkg-statoverride --quiet --update --add root root 0644 "$bin" 2>&1
	fi
done

exit 0
