. /lib/lsb/init-functions

. /usr/share/univention-lib/ucr.sh

case "$1" in
	start)
		log_action_msg "Starting univention-system setup preparations"
		
		# recreate openssh-hostkeys if they are missing
		host_key_missing=0
		for line in $(grep HostKey /etc/ssh/sshd_config | awk '{print $2}')
		do
			[ ! -f "$line" ] && host_key_missing=1 && break
		done    

		[ "$host_key_missing" -eq "1" ] && dpkg-reconfigure openssh-server
		
		# recreate ssl certificates if they are missing
		[ ! -d /etc/univention/ssl ] && dpkg-reconfigure univention-ssl

		# Show welcome page on unjoined EC2 systems:
		if is_ucr_true server/amazon; then
			ucr commit /var/www/ucs-overview/entries.json >/dev/null 2>&1
			if [ ! -e /var/univention-join/joined ]; then
				ucr set apache2/startsite="ucs-overview/initialsetup.html"
				invoke-rc.d apache2 reload
			fi
		fi

		log_action_end_msg 0
		;;
	stop)
		log_action_end_msg 0
		;;
	*)
		log_action_msg "Usage: /etc/init.d/univention-system-setup-boot {start|stop}."
		exit 1
		;;
esac


