. /usr/share/univention-lib/ucr.sh

if is_ucr_true system/setup/boot/installer; then
	# debian installer is active -> a restart of the services is not necessary
	# as the system is rebooted at the end
	exit 0
fi

if [ -x /etc/init.d/univention-directory-notifier ]; then
	invoke-rc.d univention-directory-notifier crestart
fi

if [ -x /etc/init.d/univention-directory-listener ]; then
	invoke-rc.d univention-directory-listener crestart
fi

exit 0
