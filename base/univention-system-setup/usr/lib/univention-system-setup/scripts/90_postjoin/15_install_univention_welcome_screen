from univention.management.console.modules.setup.setup_script import AptScript, main, _


class WelcomeScreenInstaller(AptScript):
	name = _('Installing univention-welcome-screen')
	brutal_apt_options = False

	def inner_run(self):
		if self.current_server_role == 'basesystem':
			return True  # do not install on basesystem
		self.steps(100)
		self.install('univention-welcome-screen')
		self.finish_task()
		return True


if __name__ == '__main__':
	script = WelcomeScreenInstaller()
	main(script)
