@require "../variables"

.umcModuleHeader
	transition: border-color 0.2s
	border-bottom: 1px solid transparent

.umcModule--scrolled .umcModuleHeader
	border-bottom-color: $grey-medium

.umcModuleHeaderOuterContainer
	padding: material-grid(2) 0

.umcModuleHeaderWrapper
	display: flex
	align-items: flex-start
	flex-wrap: wrap

.umcModuleHeaderLeft
	align-self: center

.umcModuleHeaderRight
	flex: 1 1 auto
	min-width: 0%
	text-align: right

.umcModuleTitle
	@extends h1

.umcModuleSubTitle
	font-size: var(--font-size-small)
	margin-top: var(--layout-spacing-unit)

.umc .umcModule
	.umcModuleWrapper
		margin: 0 auto
		padding: 0

		.umcModuleContent .umcModuleContentChildWrapper.dijitHidden
			display: none !important

.umc .umcPageHelpText
	margin-bottom: 1.5em
	font-size: var(--font-size-small)

.umc .umcPageHeader h1
	font-size: $font-size-title
	font-weight: 500

.umc .umcPageNav
	margin-bottom: 2.5em

	.positionText
		margin: 1em 0
		font-size: $font-size-caption
		color: var(--font-color-contrast-middle)

.umc .umcPageNav .umcPageHeader:first-child h1
	margin-top: 0

.umc .dijitDialogPaneContent .umcButtonRow:last-child,
.umc .umcPageFooter
	margin-top: 0.75em
	clear: both
