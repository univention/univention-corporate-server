# SIGHUP for UMC-server and UMC-web-server
for file in "/var/run/umc-server.pid" "/var/run/umc-web-server.pid"; do
	if [ -e "$file" ]; then
		pkill -1 -F "$file"
	fi
done

# SIGHUP for all running UMC modules
pkill -1 -f /usr/sbin/univention-management-console-module

exit 0
