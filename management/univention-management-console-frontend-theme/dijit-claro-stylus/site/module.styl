@import "../variables";

.umc .umcModuleHeader {
	width: 100%;
	margin-bottom: 2em;

	.umcModuleHeaderWrapper {
		margin: auto;
	}

	.umcModuleHeaderOuterContainer {
		background: inherit;
		width: 100%;
		padding-top: 25px;
		padding-bottom: @padding-top;
		transition: font-size 0.2s, padding-bottom 0.2s;
	}

	.umcModuleHeaderLeft {
		float: left;
		max-width: 80%;
	}

	.umcModuleHeaderRight {
		float: right;
		padding-top: 3px;
		.dijitButtonContents {
			position: relative;
		}
	}
	
	.dijitButton {
		margin-left: 12px;

		.dijitButtonNode {
			background: none;
			filter: none;
			border-radius: 0;
			border: none;
			padding: 0;
			box-shadow: none;

			.dijitButtonText {
				display: none;
				position: absolute;
				color: #ffffff;
				width: auto;
				padding: 0;
				text-align: left;
			}

			.dijitIcon {
				display: block;
				width: 20px;
				margin: auto;
			}
		}
	}
	.dijitButton.dijitButtonHover .dijitButtonText {
		display: inherit;
	}
}

body.umc:not([class~=umcHeadless]) .umcModuleHeader {
	.umcModuleHeaderSticky {
		position: fixed;
		top: 0;
		font-size: 0.7em;
		z-index: 900;
		padding-top: 5px;
		padding-bottom: @padding-top;
		transition: font-size 0.2s, padding-bottom 0.2s;
		.umcModuleHeaderLeft {
			padding-bottom: 0;
		}
		.umcModuleHeaderRight {
			padding-top: 0;
		}
		.dijitButton.dijitButtonHover .dijitButtonText {
			display: none;
		}
	}
}

.umc .umcModuleTitle {
	font-size: $font-size-large;
	color: $text-color-dark-background;
	font-weight: bold;
	line-height: 1em;
}

.umc .umcModule {
	background-color: #ffffff;
	.umcModuleWrapper {
		margin: 0 auto;
		padding: 0;
	}
}

.umc .umcPageHelpText {
	margin-bottom: 1.5em;
}

.umc .umcPageNav {
	margin-bottom: 2.5em;
}

.umc .umcPageNav .umcPageHeader:first-child h1 {
	margin-top: 0;
}

.umc .dijitDialogPaneContent .umcButtonRow:last-child,
.umc .umcPageFooter {
	margin-top: 0.75em;
	clear: both;
}
