#DEBHELPER#

eval $(univention-config-registry shell)

if [ "$server_role" = "domaincontroller_master" -o "$server_role" = "domaincontroller_backup" ] ; then
	USER_NAME="x$(date +%s$RANDOM)x"
	USER_DN="uid=${USER_NAME},$ldap_base"
	univention-directory-manager users/user create \
		--ignore_exists \
		--position "$ldap_base" \
		--set username="$USER_NAME" \
		--set password="${RANDOM}${RANDOM}" \
		--set lastname="tempuser" \
		--set description="temporary user for script univention-update-memberof"

	OLDIFS="$IFS"
	# DO NOT CHANGE FOLLOWING TWO LINES! THE LINEBREAK IS IMPORTANT!
	IFS="
"
	for dn in $(ldapsearch -x objectClass=posixGroup dn | grep ^dn | cut -b 5-) ; do
		echo "*** UPDATING GROUP $dn ***";
		univention-directory-manager groups/group modify --dn "$dn" --append users="$USER_DN"
		univention-directory-manager groups/group modify --dn "$dn" --remove users="$USER_DN"
		echo "************ DONE **************"
	done
	IFS="$OLDIFS"
	univention-directory-manager users/user remove --dn "$USER_DN"
fi
