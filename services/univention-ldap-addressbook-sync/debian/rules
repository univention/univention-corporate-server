export DH_COMPAT=4

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: build-stamp
build-stamp: configure-stamp
	dh_testdir
	touch build-stamp

D=$(CURDIR)/debian/univention-ldap-addressbook-sync

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -rf ${D}
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

    # install join script
	install -d -m 755 -o root -g root ${D}/usr/lib/univention-install
	install -m 755 95univention-ldap-addressbook-sync.inst ${D}/usr/lib/univention-install/95univention-ldap-addressbook-sync.inst

    # install directory listener module
	install -d -m 755 -o root -g root ${D}/usr/lib/univention-directory-listener/system
	install -m 755 ldap-addressbook-sync.py ${D}/usr/lib/univention-directory-listener/system

    # install synchronisation tool
	install -d -m 755 -o root -g root ${D}/usr/sbin
	install -m 755 univention-ldap-addressbook-sync ${D}/usr/sbin/univention-ldap-addressbook-sync

	univention-install-config-registry
	univention-install-config-registry-info
	dh_install


binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
