# Defaults
RUN_MODE="daemons"

# Reads config file (will override defaults above)
[ -r /etc/default/samba ] && . /etc/default/samba

NMBDPID=/var/run/samba/nmbd.pid
SMBDPID=/var/run/samba/smbd.pid

# If we should be started by heartbeat exit here

eval `/usr/sbin/univention-baseconfig shell`

if [ $samba_ha_master ]
	then
	echo "samba is managed by heartbeat"
	exit 0
fi

# clear conflicting settings from the environment
unset TMPDIR

# See if the daemons are there
test -x /usr/sbin/nmbd -a -x /usr/sbin/smbd || exit 0

test -e /var/cache/samba/dont_start && exit 0

case "$1" in
	start)
		# Don't start before join-script has run

		if [ "$samba_autostart" = "no" ]; then
			echo "Not starting samba daemons"
			exit 0
		fi

		echo -n "Starting Samba daemons:"

		echo -n " nmbd"
		start-stop-daemon --start --quiet --pidfile $NMBDPID  -a /usr/sbin/nmbd -- -D

		if [ "$RUN_MODE" != "inetd" ]; then
			if [ -z "$samba_smbd_start" ] || [ "$samba_smbd_start" = "yes" ]; then
				echo -n " smbd"
				start-stop-daemon --start --quiet --pidfile $SMBDPID -a /usr/sbin/smbd -- -D
			fi
		fi

		echo "."
		;;
	stop)
		echo -n "Stopping Samba daemons: "

		start-stop-daemon --stop --quiet --pidfile $NMBDPID
		# Wait a little and remove stale PID file
		sleep 1
		if [ -f $NMBDPID ] && ! ps h `cat $NMBDPID` > /dev/null
		then
			# Stale PID file (nmbd was succesfully stopped), remove it
			rm -f $NMBDPID
		fi
		echo -n "nmbd"

		if [ "$RUN_MODE" != "inetd" ]; then
			if [ -z "$samba_smbd_start" ] || [ "$samba_smbd_start" = "yes" ]; then
				start-stop-daemon --stop --quiet --pidfile $SMBDPID
				# Wait a little and remove stale PID file
				sleep 1
				if [ -f $SMBDPID ] && ! ps h `cat $SMBDPID` > /dev/null
				then
					# Stale PID file (nmbd was succesfully stopped), remove it
					rm -f $SMBDPID
				fi
				echo -n " smbd"
			fi
		fi

		echo "."

		;;
	reload)
		echo -n "Reloading /etc/samba/smb.conf (smbd only)"
		start-stop-daemon --stop --signal HUP --pidfile $SMBDPID

		echo "."
		;;
	restart|force-reload)
		$0 stop
		sleep 1
		$0 start
		;;
	crestart)
		if pidof smbd > /dev/null 2>&1
			then
			$0 restart
			else
			if pidof nmbd > /dev/null 2>&1
				then
				$0 restart
			else
				echo "No smbd or nmbd process found, no need to restart."
			fi
		fi
		;;
	*)
		echo "Usage: /etc/init.d/samba {start|stop|reload|restart|crestart|force-reload}"
		exit 1
		;;
esac

exit 0
