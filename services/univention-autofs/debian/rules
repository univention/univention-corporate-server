version=`dpkg-parsechangelog | grep "Version" | sed -e 's/Version: //'`
copyrightyear=`date +%Y`

PACKAGE_NAME=univention-autofs
MODULE_NAME=univention-autofs

build: build-stamp
build-stamp:
	dh_testdir
	touch $@
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -rf *~ debian/tmp debian/*~ debian/files* debian/substvars
	rm -f build-stamp
	dh_clean

install: build-stamp
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	univention-install-config-registry
	univention-install-config-registry-info

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_installdocs -i
	dh_installexamples -i
	dh_link -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary: binary-indep
.PHONY: build clean binary-indep binary install
