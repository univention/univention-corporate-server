#export DH_VERBOSE=1

export DH_COMPAT=3

D=$(CURDIR)/debian/univention-net-installer


configure: configure-stamp
configure-stamp:
	dh_testdir

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp
	dh_testdir

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m0755 serverinstallerpxe.py $(D)/usr/lib/univention-directory-listener/system/
	install -m0755 81univention-server-installation.inst $(D)/usr/lib/univention-install/

	ln -sf /var/lib/univention-repository/boot/linux26 $(D)/var/lib/univention-client-boot/linux-server
	ln -sf /var/lib/univention-repository/boot/linux26.bin $(D)/var/lib/univention-client-boot/linux.bin


	univention-install-config-registry

binary-indep: build install
# We have nothing to do by default.

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_link
	dh_strip -X var/lib/univention-windows-installer/install
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
