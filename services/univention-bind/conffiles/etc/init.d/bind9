#!/bin/sh
@%@UCRWARNING=# @%@
### BEGIN INIT INFO
# Provides:          bind9
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
@!@
SERVICES = {
	'samba4': 'samba-ad-dc',
	'ldap': 'slapd',
}
backend = configRegistry.get('dns/backend', 'ldap')
service = SERVICES.get(backend, '')
print("# Required-Start:    %s" % (service,))
print("# Required-Stop:     %s" % (service,))
@!@# Short-Description: bind9 Domain Name Server (DNS)
### END INIT INFO
#
