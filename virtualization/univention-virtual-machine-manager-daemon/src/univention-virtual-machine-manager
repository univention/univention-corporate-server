		sub_parser.add_argument(
			'conn_name',
			nargs='?',
			default='*',
			help='Cloud connection name')
		sub_parser.set_defaults(protocol=protocol.Request_L_CLOUD_IMAGE_LIST)

	def cloud_size_list(self, sub_parser):
