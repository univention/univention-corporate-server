export DH_COMPAT=3

package=univention-gdm

build: build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	rm -f build-stamp
	rm -f *~
	dh_clean

install: build
	dh_testdir
	dh_clean -k
	dh_installdirs

	install -m 0644 univention/disconnect-prelight.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/language.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/login.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/quit.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/session-prelight.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/univention.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/disconnect.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/GdmGreeterTheme.desktop debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/language-prelight.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/options.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/session.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0644 univention/system.png debian/univention-gdm/usr/share/gdm/themes/univention/
	install -m 0755 univention/Linux-Arbeitsplatz debian/univention-gdm-sessions/etc/gdm/Sessions/
	install -m 0755 univention/rdesktop debian/univention-gdm-sessions/etc/gdm/Autostart/
	install -m 0755 univention/citrix debian/univention-gdm-sessions/etc/gdm/Autostart/
	install -m 0755 univention/nx debian/univention-gdm-sessions/etc/gdm/Autostart/
	install -m 0755 univention/Linux-Arbeitsplatz.desktop debian/univention-gdm-sessions/etc/gdm/Sessions/
	
	# add entries regarding services univention-console shall manage
	mkdir -p debian/univention-gdm/etc/univention/daemons/
	echo "Gnome Display Manager;gdm;/usr/bin/gdm;99" > debian/univention-gdm/etc/univention/daemons/gdm

	univention-install-baseconfig

	dh_install

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installman
	dh_installinfo
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
