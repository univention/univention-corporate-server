@!@
print 'SA_LEARN="/usr/bin/sa-learn"'

if configRegistry.get("mail/dovecot"):
	prod = "dovecot"
else:
	prod = "cyrus"

spamFolder = configRegistry.get("mail/%s/folder/spam" % prod, "Spam")
hamFolder = configRegistry.get("mail/%s/folder/ham" % prod, "Ham")

if not spamFolder:
	spamFolder = "Spam"
if not spamFolder.lower() == "none":
	print 'SPAMFOLDER="%s"' % spamFolder
else:
	print "SPAMFOLDER=  # disabled via mail/%s/folder/spam" % prod

if not hamFolder: hamFolder = "Ham"
if not hamFolder.lower() == "none":
	print 'HAMFOLDER="%s"' % hamFolder
else:
	print "HAMFOLDER=  # disabled via mail/%s/folder/ham" % prod
@!@

if [ ! -f /var/lib/amavis/.spamassassin/bayes_toks ]; then
	touch /var/lib/amavis/.spamassassin/bayes_toks
	chown amavis:amavis /var/lib/amavis/.spamassassin/bayes_toks
	chmod 600 /var/lib/amavis/.spamassassin/bayes_toks
fi

@!@
if configRegistry.get("mail/dovecot"):
	base_folder = "/var/spool/dovecot/private/"
	user_folder = "\*/\*/Maildir/."
	ucr_folder = configRegistry.get("mail/dovecot/folder/spam", "Spam")
	# find RFC 6154 flagged \Junk folders, add them if they are not there anyway
	if not ucr_folder:
		ucr_folder = "Spam"
	elif ucr_folder.lower() == "none":
		ucr_folder = ""
	junk = ""
	for key, value in configRegistry.items():
		if key.startswith("mail/dovecot/mailboxes/special/") and value == "\Junk":
			_folder = key.split("/")[-1]
			if _folder and _folder != ucr_folder:
				junk += " -o -wholename \*/\*/Maildir/.%s" % _folder
else:
	base_folder = "/var/spool/cyrus/mail/domain/"
	user_folder = "\*/\*/\*/user/\*/"
	junk = ""
print '''if [ -n "$SPAMFOLDER" ]; then
find %(base)s \( -wholename %(user)s"$SPAMFOLDER" %(junk)s \) \\
	-exec $SA_LEARN --dbpath /var/lib/amavis/.spamassassin --spam {} \;
fi

if [ -n "$HAMFOLDER" ]; then
	find %(base)s -wholename %(user)s"$HAMFOLDER" \\
	-exec $SA_LEARN --dbpath /var/lib/amavis/.spamassassin --ham {} \;
fi''' % {"base": base_folder, "user": user_folder, "junk": junk}
@!@
