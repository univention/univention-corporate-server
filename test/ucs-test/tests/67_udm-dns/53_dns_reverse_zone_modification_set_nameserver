#!/usr/share/ucs-test/runner python
## desc: Set nameserver during dns/reverse_zone modification
## tags: [udm]
## roles: [domaincontroller_master]
## exposure: careful
## packages:
##   - univention-config
##   - univention-directory-manager-tools
## versions:
##  3.1-1: skip
##  3.2-0: fixed

import univention.testing.utils as utils
import univention.testing.udm as udm_test
import univention.testing.strings as uts

if __name__ == '__main__':
	with udm_test.UCSTestUDM() as udm:
		ns_record = uts.random_dns_record()

		# IPv4 case:
		reverse_zone = udm.create_object('dns/reverse_zone', subnet='10.20.30', nameserver=uts.random_dns_record())

		udm.modify_object('dns/reverse_zone', dn=reverse_zone, nameserver=ns_record, wait_for=True)
		utils.verify_ldap_object(reverse_zone, {'nSRecord': ['%s' % ns_record]})

		# IPv6 case:
		reverse_zone = udm.create_object('dns/reverse_zone', subnet='2011:06f8:13dc:0002:19b7:d592:09dd', nameserver=uts.random_dns_record())

		udm.modify_object('dns/reverse_zone', dn=reverse_zone, nameserver=ns_record, wait_for=True)
		utils.verify_ldap_object(reverse_zone, {'nSRecord': ['%s' % ns_record]})
