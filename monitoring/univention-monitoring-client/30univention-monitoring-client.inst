	--set summary="check if swap device is out of free space" \
	--set for="5m" \
	--append labels='"severity" "warning"' \
	--append templateValues='"max" "60"' \
	--set query="(node_memory_SwapTotal_bytes{%instance%} - node_memory_SwapFree_bytes{%instance%}) * 100 / node_memory_SwapTotal_bytes > %max%" || die "UNIVENTION_SWAP"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_SWAP" \
	--set description="swap device is nearly out of free space" \
	--set summary="check if swap device is out of free space" \
	--append labels='"severity" "critical"' \
	--append templateValues='"max" "80"' \
	--set query="(node_memory_SwapTotal_bytes{%instance%} - node_memory_SwapFree_bytes{%instance%}) * 100 / node_memory_SwapTotal_bytes{%instance%} > %max%" || die "UNIVENTION_SWAP"

