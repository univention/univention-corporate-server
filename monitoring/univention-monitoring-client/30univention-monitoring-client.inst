	--append labels='"severity" "warning"' \
	--append templateValues='"max" "3456000"' \
	--set query="univention_ssl_certificate_expiry_seconds{%instance%} < %max%" || die "UNIVENTION_SSL_WARNING" # 40 days

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_SSL" \
	--set description="SSL certificate validity expired" \
	--set summary="check if ssl certificate is valid" \
	--append labels='"severity" "critical"' \
	--append templateValues='"max" "1728000"' \
	--set query="univention_ssl_certificate_expiry_seconds{%instance%} < %max%" || die "UNIVENTION_SSL" # 20 days

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_SSL_METRIC_MISSING" \
	--set description="metrics regarding ssl are missing" \
	--set summary="check if metrics regarding ssl are missing" \
	--append labels='"severity" "critical"' \
	--set query="absent(univention_ssl_certificate_expiry_seconds{%instance%}) == 1" || die "UNIVENTION_SSL_METRIC_MISSING"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_LOAD_WARNING" \
	--set alertGroup="UNIVENTION_LOAD" \
	--set description="CPU load exceeds specified limits" \
	--set summary="check if CPU load exceeds specified limits" \
	--set for="5m" \
	--append labels='"severity" "warning"' \
	--set query="node_load1 > 3 or node_load5 > 2 or node_load15 > 1" || die "UNIVENTION_LOAD_WARNING"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_LOAD" \
	--set description="CPU load exceeds specified limits" \
	--set summary="check if CPU load exceeds specified limits" \
	--set for="5m" \
	--append labels='"severity" "critical"' \
	--set query="node_load1 > 6 or node_load5 > 4 or node_load15 > 2" || die "UNIVENTION_LOAD"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_LOAD_METRIC_MISSING" \
	--set description="metric regarding cpu load are missing" \
