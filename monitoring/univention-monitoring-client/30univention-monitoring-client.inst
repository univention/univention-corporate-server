univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_JOINSTATUS_WARNING" \
	--set description='The join status of the system is incorrect: some join scripts must be called' \
	--set summary="check if system has been joined successfully" \
	--append labels='"severity" "warning"' \
	--set query="univention_join_status{%instance%} == 6" || die "UNIVENTION_JOINSTATUS"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_JOINSTATUS" \
	--set description='The join status of the system is incorrect:
{{ range query "univention_join_status" }}
    univention_join_status has value {{.Value}}
    {{if or (eq .Value -1) (eq .Value 1)}}
    => /etc/machine.secret not found - system not joined yet?
    {{end}}
    {{if (eq .Value 2)}}
    => ldapsearch auth failed
    {{end}}
    {{if (eq .Value 3)}}
    => ldapsearch auth or TLS failed
    {{end}}
    {{if (eq .Value 4)}}
    => Cannot find /usr/share/univention-join/.joined or /var/univention-join/joined
    {{end}}
{{ end }}' \
	--set summary="check if system has been joined successfully" \
	--append labels='"severity" "critical"' \
	--set query="univention_join_status{%instance%} != 0 and univention_join_status{%instance%} != 6" || die "UNIVENTION_JOINSTATUS"

