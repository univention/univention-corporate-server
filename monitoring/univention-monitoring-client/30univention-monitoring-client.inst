	--set for="5m" \
	--append labels='"severity" "critical"' \
	--set query="absent(univention_ldap_reachable{%instance%}) == 1" || die "UNIVENTION_LDAP_AUTH_METRIC_MISSING"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_NTP" \
	--set description="time offset is too large" \
	--set summary="check if service ntp is ok" \
	--set for="5m" \
	--append labels='"severity" "critical"' \
	--append templateValues='"max" "60"' \
	--set query="univention_ntp_offset_seconds{%instance%} >= %max%" || die "UNIVENTION_NTP"

