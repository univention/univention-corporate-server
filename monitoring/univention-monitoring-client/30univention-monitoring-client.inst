	--set name="UNIVENTION_SWAP_METRIC_MISSING" \
	--set description="metrics regarding swap are missing" \
	--set summary="check if metrics regarding swap are missing" \
	--append labels='"severity" "critical"' \
	--set query="absent(node_memory_SwapTotal_bytes{%instance%}) == 1 or absent(node_memory_SwapFree_bytes{%instance%}) == 1" || die "UNIVENTION_SWAP_METRIC_MISSING"

