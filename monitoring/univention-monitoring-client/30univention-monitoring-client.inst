	--set query="absent(node_load1) == 1 or absent(node_load5) == 1 or absent(node_load15) == 1" || die "UNIVENTION_LOAD_METRIC_MISSING"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_REPLICATION_WARNING" \
	--set alertGroup="UNIVENTION_REPLICATION" \
	--set description="The LDAP replication is not up to date" \
	--set summary="check if LDAP replication is uptodate" \
	--set for="5m" \
	--append labels='"severity" "warning"' \
	--append templateValues='"max" "10"' \
	--set query="univention_listener_replication_difference{%instance%} > %max%" || die "UNIVENTION_REPLICATION_WARNING"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_REPLICATION" \
	--set description="The LDAP replication is not up to date" \
	--set summary="check if LDAP replication is uptodate" \
