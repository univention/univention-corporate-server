## joinscript api: bindpwdfile

VERSION=2

. /usr/share/univention-join/joinscripthelper.lib
. /usr/share/univention-lib/all.sh
. /usr/share/univention-lib/umc.sh

joinscript_init

eval "$(univention-config-registry shell)"

univention-directory-manager container/cn create "$@" --ignore_exists \
	--position="$ldap_base" \
	--set name="monitoring" \
	--set description="Monitoring objects" || die "monitoring container"

ucs_registerLDAPExtension "$@" \
	--ucsversionstart 4.4-1 \
	--ucsversionend 5.99-0 \
	--schema /usr/lib/univention-monitoring-client/schema/univention-monitoring.schema \
	--acl /usr/lib/univention-monitoring-client/schema/62univention-monitoring.acl || die "LDAP Schema/ACL"

ucs_registerLDAPExtension "$@" \
	--ucsversionstart 5.0-0 \
	--ucsversionend 5.99-0 \
	--udm_syntax /usr/lib/univention-monitoring-client/udm/syntax/monitoring.py || die "UDM Syntax"

ucs_registerLDAPExtension "$@" \
	--ucsversionstart 5.0-0 \
	--ucsversionend 5.99-0 \
	--udm_hook /usr/lib/univention-monitoring-client/udm/hooks/monitoring.py || die "UDM hooks"

ucs_registerLDAPExtension "$@" \
	--ucsversionstart 5.0-0 \
	--ucsversionend 5.99-0 \
	--udm_module /usr/lib/univention-monitoring-client/udm/alert.py \
	--messagecatalog /usr/lib/univention-monitoring-client/udm/de.mo \
	--umcregistration /usr/lib/univention-monitoring-client/umc/udm-monitoring.xml \
	--umcmessagecatalog /usr/lib/univention-monitoring-client/umc/de-udm-monitoring.mo \
	--icon /usr/lib/univention-monitoring-client/umc/icons/16x16/monitoring.png \
	--icon /usr/lib/univention-monitoring-client/umc/icons/50x50/monitoring.png \
	--icon /usr/lib/univention-monitoring-client/umc/icons/16x16/udm-monitoring-alert.png \
	--icon /usr/lib/univention-monitoring-client/umc/icons/50x50/udm-monitoring-alert.png \
	--icon /usr/lib/univention-monitoring-client/umc/icons/scalable/monitoring.svg \
	--icon /usr/lib/univention-monitoring-client/umc/icons/scalable/udm-monitoring-alert.svg || die "UDM and UMC modules"

univention-directory-manager settings/extended_attribute create "$@" --ignore_exists \
	--position "cn=custom attributes,cn=univention,$ldap_base" \
	--set name="ucs-monitoring" \
	--set CLIName="monitoringAlerts" \
	--set hook="MonitoringComputer" \
	--set shortDescription="Assigned monitoring alerts" \
	--append translationShortDescription='"de_DE" "zugewiesene Warnmeldungen"' \
	--append translationShortDescription='"fr_FR" "alertes assignées"' \
	--set longDescription="Assigned monitoring alerts" \
	--append translationLongDescription='"de_DE" "zugewiesene Warnmeldungen"' \
	--append translationLongDescription='"fr_FR" "alertes assignées"' \
	--set tabAdvanced="1" \
	--set tabName="Alerts" \
	--append translationTabName='"de_DE" "Warnmeldungen"' \
	--append translationTabName='"fr_FR" "Alertes"' \
	--append module="computers/domaincontroller_master" \
	--append module="computers/domaincontroller_backup" \
	--append module="computers/domaincontroller_slave" \
	--append module="computers/memberserver" \
	--set syntax=monitoringAlerts \
	--set multivalue=1 \
	--set valueRequired=0 \
	--set mayChange=1 \
	--set doNotSearch=1 \
	--set objectClass=univentionHost \
	--set ldapMapping=univentionDoesNotExists \
	--set deleteObjectClass=0 \
	--set overwriteTab=0 || die "Extended attribute for computers"

ucs_addServiceToLocalhost "UCS Monitoring" "$@" || die "Monitoring service"

umc_init
umc_operation_create "udm-monitoring" "UDM - Alert Monitoring" "monitoring/alerts" "udm/*:objectType=monitoring/*" \
	"udm/properties:objectType=policies/*" "udm/layout:objectType=policies/*" "udm/query:objectType=policies/*" || die "UMC operation sets"

if is_ucr_false monitoring/common/defaultalerts/autocreate; then
	joinscript_save_current_version
	exit 0
fi

MONITORINGCONTAINER="cn=monitoring,$ldap_base"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_DISK_ROOT" \
	--set description='filesystem / is out of diskspace:
Used: {{ range query "node_filesystem_size_bytes{mountpoint=\"/\"}" }}{{.Value}}{{ end }}
Free: {{ range query "node_filesystem_free_bytes{mountpoint=\"/\"}" }}{{.Value}}{{ end }}' \
	--set summary="check if filesystem / is out of diskspace" \
	--append labels='"severity" "critical"' \
	--append templateValues='"min" "10"' \
	--set query='(100 / node_filesystem_size_bytes{mountpoint="/",%instance%}) * node_filesystem_free_bytes{mountpoint="/",%instance%} < %min%' || die "UNIVENTION_DISK_ROOT"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_DISK_ROOT_WARNING" \
	--set alertGroup="UNIVENTION_DISK_ROOT" \
	--set description="check if / is out of diskspace" \
	--set summary="check if / is out of diskspace" \
	--append labels='"severity" "warning"' \
	--append templateValues='"min" "25"' \
	--set query='(100 / node_filesystem_size_bytes{mountpoint="/",%instance%}) * node_filesystem_free_bytes{mountpoint="/",%instance%} < %min%' || die "UNIVENTION_DISK_ROOT_WARNING"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_DISK_ROOT_METRIC_MISSING" \
	--set alertGroup="UNIVENTION_DISK_ROOT" \
	--set description="metrics regarding diskspace are missing" \
	--set summary="check if metrics regarding diskspace are missing" \
	--append labels='"severity" "critical"' \
	--set query='(absent(node_filesystem_size_bytes{mountpoint="/",%instance%}) == 1) or (absent(node_filesystem_free_bytes{mountpoint="/",%instance%}) == 1)' || die "UNIVENTION_DISK_ROOT_METRIC_MISSING"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_DNS" \
	--set description='DNS resolution is broken: univention_dns_resolveable={{ range query "univention_dns_resolveable" }}{{.Value}}{{ end }}' \
	--set summary="check if service dns is ok" \
	--set for="5m" \
	--append labels='"severity" "critical"' \
	--set query="univention_dns_resolveable{%instance%} != 1" || die "UNIVENTION_DNS"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_DNS_METRIC_MISSING" \
	--set description="metrics regarding dns are missing" \
	--set summary="check if metrics regarding dns are missing" \
	--set for="5m" \
	--append labels='"severity" "critical"' \
	--set query="absent(univention_dns_resolveable{%instance%}) == 1" || die "UNIVENTION_DNS_METRIC_MISSING"

univention-directory-manager monitoring/alert create "$@" --ignore_exists --position="$MONITORINGCONTAINER" \
	--set name="UNIVENTION_SWAP_WARNING" \
