#!/bin/sh
set -e -u

JSON='{
"Name":"'"$CI_COMMIT_REF_SLUG"'",
"Comment":"'"$CI_COMMIT_REF_NAME"'",
"DefaultDistribution":"git",
"DefaultComponent":"'"$CI_COMMIT_REF_SLUG"'"
}'
exec curl \
	--silent \
	--show-error \
	-X POST \
	-H 'Content-Type: application/json' \
	--data "$JSON" \
	"$APTLY/repos"
